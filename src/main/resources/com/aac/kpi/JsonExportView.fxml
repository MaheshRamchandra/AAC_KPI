<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.Region?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.aac.kpi.controller.JsonExportController" spacing="12">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>
    <children>
        <GridPane hgap="8" vgap="8">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="120" />
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints minWidth="100" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>

            <Label text="Converter JAR:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="jarPathField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
            <Button fx:id="jarBrowseButton" text="Browse…" onAction="#onBrowseJar" GridPane.rowIndex="0" GridPane.columnIndex="2" />

            <Label text="Excel file:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="excelPathField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
            <Button fx:id="excelBrowseButton" text="Browse…" onAction="#onBrowseExcel" GridPane.rowIndex="1" GridPane.columnIndex="2" />

            <Label text="Output folder:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <TextField fx:id="outputFolderField" GridPane.rowIndex="2" GridPane.columnIndex="1" />
            <Button fx:id="outputBrowseButton" text="Choose…" onAction="#onBrowseOutput" GridPane.rowIndex="2" GridPane.columnIndex="2" />

            <Label text="AAC count:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <TextField fx:id="aacCountField" GridPane.rowIndex="3" GridPane.columnIndex="1" />

            <Label text="Resident count:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
            <TextField fx:id="residentCountField" GridPane.rowIndex="4" GridPane.columnIndex="1" />

            <Label text="Volunteer report count:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
            <TextField fx:id="volunteerCountField" GridPane.rowIndex="5" GridPane.columnIndex="1" />

            <Label text="Event count:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
            <TextField fx:id="eventCountField" GridPane.rowIndex="6" GridPane.columnIndex="1" />

            <Label text="Organization count:" GridPane.rowIndex="7" GridPane.columnIndex="0" />
            <TextField fx:id="organizationCountField" GridPane.rowIndex="7" GridPane.columnIndex="1" />

            <Label text="Location count:" GridPane.rowIndex="8" GridPane.columnIndex="0" />
            <TextField fx:id="locationCountField" GridPane.rowIndex="8" GridPane.columnIndex="1" />
        </GridPane>

        <HBox spacing="8">
            <Button fx:id="autoFillButton" text="Auto-fill counts" onAction="#onAutoFillCounts" />
            <Button fx:id="useCurrentExcelButton" text="Use current Excel" onAction="#onUseCurrentExcel" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="runButton" text="Run JSON export" onAction="#onRunExport" />
        </HBox>

        <TextArea fx:id="logArea" prefRowCount="8" wrapText="true" VBox.vgrow="ALWAYS" />
        <Label fx:id="statusLabel" text="Ready" />
    </children>
</VBox>
